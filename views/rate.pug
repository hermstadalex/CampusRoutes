extends layout

block content
    h1(class='testHome text-center') #[strong CampusRoutes]
    h4(class='text-center') Tell Others How Your Trip Went!
    
    input(id="input-id" class="center-block")
        
        
    h4(class='text-center') How was the traffic?
    
    
    div(class="button-group-wrapper")
        div(class="btn-group btn-group-justified" role="group" aria-label="...")
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-default") Low
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-default") Medium
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-default") High
    
    
    h4(class="text-center") Duration of the Trip: #[strong 5:23]
    
    div(class="button-group-wrapper")
        div(class="btn-group btn-group-justified" role="group" aria-label="...")
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-default") Early
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-default") On Time
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-default") Late
                
    
    h4(class="text-center") Anything else you'd like to add?
    
    div(class="form-group")
        textarea(class="form-control" rows="5" id="comment")
        
        
    
    div(class="center-block button-wrapper text-center")
        button(type="button" id="cancel" class="btn btn-danger") Cancel
        button(type="button" id="submit" class="btn btn-success") Submit

    script(type="text/javascript").
        window.onload = function() {

            // initialize with defaults
            $("#input-id").rating({showCaption: false,
                                   clearButton: ""});

            document.getElementById("submit").onclick = function() {
                location.href = "/select";
            };
            
            document.getElementById("cancel").onclick = function() {
                location.href = "/record";
            };
        };
    
